@page "/playermodal"
@using MasterMind.Data.Enum

<div class="my-2 me-3 fs-6">
    <button class=" btn btn-outline-light rounded-circle rounded-3 float-end" @onclick="ValidPlayer">X</button>
</div>

<EditForm Model="Player">

    <div class="d-flex align-content-center align-items-center">

        <InputRadioGroup @bind-Value="Player.Sex">

            <div class="row w-100">
                <div class="d-flex flex-column align-content-center col-6 my-2">
                    <img src="/img/avatarFemale.png" style="width:150px; height:150px" class="img-fluid img-thumbnail center mb-3 bg-transparent border-0" />
                    <InputRadio Value="SexEnum.female">Femme</InputRadio>
                </div>

                <div class="d-flex flex-column align-content-center col-6 my-2">
                    <img src="/img/avatarMale.png" style="width:150px; height:150px" class="img-fluid img-thumbnail center mb-3  bg-transparent border-0" />
                    <InputRadio Value="SexEnum.male">Homme</InputRadio>
                </div>
            </div>

        </InputRadioGroup>

    </div>

    <div class="row justify-content-center w-100 my-3">
        <div class="col-12 col-md-10 col col-lg-9 col-xl-8 col-xxl-6 text-center">
            <label for="playername" class="col-12 my-auto text-white">@(Player.Sex == @SexEnum.female ? "Nom de la joueuse : " : "Nom du joueur : ")</label>
            <InputText @bind-Value="Player.Username" class="bg-transparent text-white border-0 border-bottom border-1 border-white col-12" id="playername" />
        </div>
    </div>

    <div class="my-4 text-center">
        <button @onclick="ValidPlayer" class="btn btn-outline-light col-9 col-md-7 col-lg-5 col-xl-4 col-xxl-3">
            <i class="fas fa-check-circle text-success me-1"></i>
            Ok
        </button>
    </div>
</EditForm>