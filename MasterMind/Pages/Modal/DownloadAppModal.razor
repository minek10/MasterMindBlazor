@page "/downloadapp"

<div class="mt-3 mb-2 row fixed">
    <div class="col-10 my-auto text-center text-white fs-4">
        <span class="ms-5"> <i class="fas fa-download me-2"></i>Télécharger l'app</span>
    </div>
    <div class="col-2 my-auto text-center">
        <button class="btn btn-outline-light border-0 py-0 rounded-circle fs-4" @onclick="CloseModal">X</button>
    </div>
</div>

<div class="mx-1 text-white mt-4 mb-2 overflow-auto">
    <div class="mx-2">
        <div class="row mx-auto">
            <button class="col-4 border-0 bg-transparent border-end border-light toggle" @onclick='(() => ActivePlatform("android"))'> <i class="fab fa-android me-2"></i> Android</button>
            <button class="col-4 border-0 bg-transparent border-end border-light toggle" @onclick='(() => ActivePlatform("ios"))'> <i class="fab fa-apple me-2"></i>iOS</button>
            <button class="col-4 border-0 bg-transparent toggle" @onclick='(() => ActivePlatform("windows"))'> <i class="fab fa-windows me-2"></i>Windows</button>
        </div>

        @if (IsAndroid)
        {
            <h3 class="my-3">Installation</h3>
            <ul>
                <li>Utilisez Google Chrome</li>
                <li>Si Google Chrome vous propose d'installer l'application faites-le</li>
                <li>Si Google Chrome ne vous le propose pas, cliquez sur "Settings" et ensuite ajouter à l'écran d'accueil</li>
            </ul>

            <h3 class="my-3">Désinstallation</h3>
            <ul>
                <li>Soit depuis le raccourci depuis votre launcher</li>
                <li>Soit depuis les applications installées</li>
            </ul>
        }

        @if (IsApple)
        {
            <h3 class="my-3">Installation</h3>
            <ul>
                <li>Utilisez Google Chrome</li>
                <li>En haut à droite de la barre d'adresse, appuyez sur 'Partager'</li>
                <li>Recherchez l'option Ajouter à l'écran d'accueil, puis appuyez dessus</li>
                <li>Confirmez ou modifiez les détails concernant le site Web, puis appuyez sur 'Ajouter'</li>
            </ul>

            <h3 class="my-3">Désinstallation</h3>
            <ul>
                <li>Sur votre iPhone ou votre iPad, accédez à l'écran d'accueil</li>
                <li>Recherchez le raccourci que vous souhaitez supprimer</li>
                <li>Appuyez de manière prolongée sur ce raccourci</li>
                <li>Appuyez sur Supprimer le signet</li>
            </ul>
        }

        @if (IsWindows)
        {
            <h3 class="my-3">Installation</h3>
            <ul>
                <li>Utilisez Google Chrome</li>
                <li>En haut à droite de la barre d'adresse, cliquez sur 'Installer'</li>
                <li>Suivez les instructions à l'écran</li>
            </ul>

            <h3 class="my-3">Désinstallation</h3>
            <ul>
                <li>Utilisez Google Chrome</li>
                <li>En haut à droite, cliquez sur 'Plus', puis 'Désinstaller' [nom de l'application]</li>
                <li>Cliquez sur Supprimer</li>
            </ul>
        }
    </div>

</div>