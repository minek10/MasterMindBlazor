@page "/"
@using MasterMind.Pages.Modal

<div class="d-flex w-100 justify-content-center align-items-center" style="height:30vh;">
    <section class="col-12">
        <h1 class="text-shadow">Master Mind</h1>
    </section>
</div>

<div class="d-flex w-100 justify-content-center align-items-center" style="height:50vh;">
    <div class="row my-auto text-uppercase mx-2">

        <div class="btn btn-one fs-4 my-2">
            <span @onclick="RedirectToGame"> <i class="fas fa-gamepad me-1"></i> Nouvelle partie</span>
        </div>
        <div class="btn btn-one fs-4 my-2">
            <span> <i class="fas fa-table me-1"></i> Meilleurs scores</span>
        </div>
        <div class="btn btn-one fs-4 my-2">
            <span @onclick="()=> IsShowRulesModal = true"> <i class="fas fa-book me-1"></i> Règles du jeu</span>
        </div>
        <div class="btn btn-one col-12 fs-4 my-2">
            <span @onclick="()=> IsShowDownloadAppModal = true"> <i class="fas fa-download me-1"></i> Télécharger l'application</span>
        </div>
    </div>
</div>

@if (IsShowRulesModal)
{
    <div class="modalbg">
        <div class="modal-content fademodal" style="min-width:50vh; max-width:75vh; height:80vh">
            <RulesModal CloseModalCallBack="CloseRulesModal" />
        </div>
    </div>
}

@if (IsShowDownloadAppModal)
{
    <div class="modalbg">
        <div class="modal-content fademodal" style="min-width:50vh; max-width:75vh; height:80vh">
            <DownloadAppModal CloseModalCallBack="CloseDownloadAppModal" />
        </div>
    </div>
}